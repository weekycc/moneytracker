<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MTP.Views.MainPage"
             Title="{Binding Title}"
            xmlns:local="clr-namespace:MTP.Views;assembly=MTP"
            BackgroundColor="#F7F7F7" BarBackgroundColor="#C1AC32">

    <local:TransactionPanel x:Name="piTransactions" Icon="clipboardlist.png"/>
    <local:AccountPanel x:Name="piAccounts" Title="Accounts" Icon="library.png"/>
    <local:ProfilePanel x:Name="piProfile" Title="Profile" Icon="settings.png"/>

</TabbedPage>